        <div id="login" class="section active form-container">
			
			
			<h1>Bem-vindo, <span id="saldacao">Usuário</span></h1>
				
			
            <h3 class="text-center">Login</h3>
			<form>
				<div class="form-group">
					<label for="nameIdLogin">Nome ou ID:</label>
					<input type="text" class="form-control" id="nameIdLogin" name="nameIdLogin" placeholder="Digite seu nome ou ID" oninput="updateLink()">
				</div>
				<div class="form-group">
					<label for="senhaLogin">Senha:</label>
					<input type="text" class="form-control" id="senhaLogin" name="senhaLogin" placeholder="Digite sua senha" oninput="updateLink()">
				</div>
				<a id="loginLink" href="#">Entrar</a>
			</form>

			<script>
				if(text="${pessoas?.nome}"){
					document.getElementById("saldacao").innerHTML = text='${pessoas.nome}';
				}
				function updateLink() {
				    const nameIdValue = document.getElementById("nameIdLogin").value;
					const senhaLogin = document.getElementById("senhaLogin").value;
				    const loginLink = document.getElementById("loginLink");
				    loginLink.href = `/${encodeURIComponent(nameIdValue)}/${encodeURIComponent(senhaLogin)}`;
				}
			</script>

        </div>

        <div id="cadastro" class="section form-container">
